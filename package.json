{
  "name": "upgradeable-permit-erc20",
  "version": "1.0.0",
  "description": "Permit-enabled upgradeable ERC20 smart contract template.",
  "author": "Pascal Marco Caversaccio",
  "license": "MIT",
  "keywords": [
    "ethereum",
    "blockchain",
    "solidity",
    "erc20",
    "openzeppelin",
    "upgradable-smart-contracts"
  ],
  "homepage": "https://github.com/pcaversaccio/erc20-permit-upgradeable#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/pcaversaccio/erc20-permit-upgradeable.git"
  },
  "bugs": {
    "url": "https://github.com/pcaversaccio/erc20-permit-upgradeable/issues"
  },
  "scripts": {
    "help": "npx hardhat help",
    "accounts": "npx hardhat accounts",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean",
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "compile": "npx hardhat compile",
    "deploy:hardhat": "npx hardhat run --network hardhat scripts/deploy.ts",
    "deploy:rinkeby": "npx hardhat run --network rinkeby scripts/deploy.ts",
    "lint:check": "npm run prettier:check && npm run solhint:check && npx eslint **/*.{js,ts}",
    "lint:fix": "npm run prettier:fix && npm run solhint:fix && npx eslint **/*.{js,ts} --fix",
    "prettier:check": "prettier -c **/*.{js,ts,md,sol}",
    "prettier:fix": "prettier --write **/*.{js,ts,md,sol}",
    "solhint:check": "npx solhint 'contracts/**/*.sol'",
    "solhint:fix": "npx solhint 'contracts/**/*.sol' --fix"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@openzeppelin/contracts-upgradeable": "^4.3.2",
    "@openzeppelin/hardhat-upgrades": "^1.12.0",
    "@typechain/ethers-v5": "^8.0.2",
    "@typechain/hardhat": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "ethers": "^5.5.1",
    "hardhat": "^2.6.8",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier-eslint": "^13.0.0",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.2",
    "typescript": "^4.4.4"
  }
}
